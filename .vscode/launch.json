{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Main + renderer",
            "configurations": [
                "Main",
                "Renderer"
            ],
            "stopAll": true
        }
    ],
    "configurations": [
        {
            //用来调试渲染器进程
            "name": "Renderer",
            "port": 9222,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            // 用来运行主程序
            "name": "Main",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
            },
            "args": [
                ".",
                "--remote-debugging-port=9222"
            ],
            "outputCapture": "std",
            "console": "integratedTerminal"
        }
    ]
}